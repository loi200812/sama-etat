<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- AI Model Configuration List View -->
        <record id="ai_model_config_list_view" model="ir.ui.view">
            <field name="name">ai.model.config.list</field>
            <field name="model">ai.model.config</field>
            <field name="arch" type="xml">
                <list string="Configuration des Mod√®les IA">
                    <field name="name"/>
                    <field name="model_type"/>
                    <field name="active" widget="boolean_toggle"/>
                    <field name="is_default" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- AI Model Configuration Form View -->
        <record id="ai_model_config_form_view" model="ir.ui.view">
            <field name="name">ai.model.config.form</field>
            <field name="model">ai.model.config</field>
            <field name="arch" type="xml">
                <form string="Configuration Mod√®le IA">
                    <header>
                        <button name="test_connection" type="object" string="üß™ Tester la Connexion" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de la configuration..."/>
                            </h1>
                        </div>
                        <group>
                            <group string="Configuration de Base">
                                <field name="model_type"/>
                                <field name="is_default"/>
                            </group>
                            <group string="Configuration API">
                                <field name="api_key" password="True" invisible="model_type == 'ollama'"/>
                                <field name="api_url" placeholder="URL de l'API"/>
                                <field name="model_name" placeholder="Nom du mod√®le"/>
                            </group>
                        </group>
                        <group string="Param√®tres">
                            <group>
                                <field name="max_tokens"/>
                                <field name="temperature"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- AI Model Configuration Action -->
        <record id="ai_model_config_action" model="ir.actions.act_window">
            <field name="name">Configuration des Mod√®les IA</field>
            <field name="res_model">ai.model.config</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configurez vos mod√®les IA !
                </p>
                <p>
                    Ajoutez et configurez des mod√®les d'intelligence artificielle pour g√©n√©rer du contenu automatiquement.
                </p>
            </field>
        </record>

        <!-- Old AI menu removed - now using simplified 'Fournisseurs d'IA' menu from ai_provider_config_views.xml -->

    </data>
</odoo>
